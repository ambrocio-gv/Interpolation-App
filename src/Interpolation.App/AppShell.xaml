<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Interpolation.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Interpolation.App"
    Title="Interpolation.App">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" Padding="8,0" BackgroundColor="#F5F5F5">
            <Image Grid.Column="0" 
                   Source="simple_logo.svg"
                   WidthRequest="28"
                   HeightRequest="28"
                   VerticalOptions="Center"/>
            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="0">
                <Label Text="Interpolation Application"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333333"/>
                <Label Text="Deckmaster Marine"
                       FontSize="11"
                       TextColor="#666666"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.TitleView>

    <ShellContent
        Title="Interpolation"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
